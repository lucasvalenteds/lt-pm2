{
  "name": "node-template",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc"
  },
  "dependencies": {
    "@pm2/io": "4.3.5"
  },
  "devDependencies": {
    "@types/node": "14.0.24",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "autocannon": "5.0.1",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "pm2": "4.4.0",
    "prettier": "2.0.5",
    "typescript": "3.9.7"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "package.json"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/no-misused-promises": 0
    }
  },
  "prettier": {
    "parser": "typescript",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "apps": [
    {
      "name": "server",
      "script": "./dist/index.js",
      "exec_mode": "cluster",
      "env": {
        "PORT": 8080
      }
    }
  ]
}
